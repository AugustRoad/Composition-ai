<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191C1D"
    tools:context=".MainActivity">

    <!-- Top Bar -->
    <ImageButton
        android:id="@+id/btn_flash"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_icon_circle"
        android:src="@android:drawable/ic_menu_camera"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_icon_circle"
        android:src="@android:drawable/ic_menu_preferences"
        app:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Settings Menu -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/settings_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_settings">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grid View"
                android:textColor="@android:color/white" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_mirror_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mirror Front Camera"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#333333"
        app:layout_constraintBottom_toTopOf="@+id/modes_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_settings" />

    <!-- Grid Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/grid_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/camera_preview"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview"
        app:layout_constraintStart_toStartOf="@+id/camera_preview"
        app:layout_constraintEnd_toEndOf="@+id/camera_preview">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.666" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Level Indicator -->
    <View
        android:id="@+id/level_line_left"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="#FFD700"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/level_center"
        app:layout_constraintTop_toTopOf="@+id/camera_preview"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview" />

    <View
        android:id="@+id/level_center"
        android:layout_width="2dp"
        android:layout_height="10dp"
        android:background="#FFD700"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/camera_preview"
        app:layout_constraintEnd_toEndOf="@+id/camera_preview"
        app:layout_constraintTop_toTopOf="@+id/camera_preview"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview" />

    <View
        android:id="@+id/level_line_right"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="#FFD700"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/level_center"
        app:layout_constraintTop_toTopOf="@+id/camera_preview"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview" />

    <!-- Focus Square -->
    <View
        android:id="@+id/focus_square"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_focus_square"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/camera_preview"
        app:layout_constraintEnd_toEndOf="@+id/camera_preview"
        app:layout_constraintTop_toTopOf="@+id/camera_preview"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview" />

    <!-- Overlay Image -->
    <ImageView
        android:id="@+id/overlay_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview"
        app:layout_constraintEnd_toEndOf="@+id/camera_preview"
        app:layout_constraintStart_toStartOf="@+id/camera_preview"
        app:layout_constraintTop_toTopOf="@+id/camera_preview" />

    <!-- Overlay Opacity Slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/overlay_opacity_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:valueFrom="0.0"
        android:valueTo="1.0"
        android:value="0.5"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/zoom_controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Edge Detection Toggle -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_edge_detection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Edges Only"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/overlay_opacity_slider"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Flip Overlay Toggle -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_flip_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Flip"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/overlay_opacity_slider"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Pro Controls -->
    <LinearLayout
        android:id="@+id/pro_controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#80000000"
        app:layout_constraintBottom_toTopOf="@+id/modes_container">

        <!-- Slider for selected parameter -->
        <LinearLayout
            android:id="@+id/pro_slider_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/pro_slider_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFD700"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />
                    
                <TextView
                    android:id="@+id/pro_btn_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUTO"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_icon_circle"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/pro_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:thumbColor="#FFD700"
                app:trackColorActive="#FFD700"
                app:trackColorInactive="#80FFFFFF"
                app:tickVisible="true"
                app:tickColorActive="#FFD700"
                app:tickColorInactive="#80FFFFFF" />
                
            <TextView
                android:id="@+id/pro_slider_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Parameter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:weightSum="5">

            <!-- ISO -->
            <LinearLayout
                android:id="@+id/pro_btn_iso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/pro_lbl_iso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISO"
                    android:textColor="#B3FFFFFF"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/pro_val_iso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUTO"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- S (Shutter Speed) -->
            <LinearLayout
                android:id="@+id/pro_btn_s"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/pro_lbl_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textColor="#B3FFFFFF"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/pro_val_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUTO"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- WB -->
            <LinearLayout
                android:id="@+id/pro_btn_wb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/pro_lbl_wb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WB"
                    android:textColor="#B3FFFFFF"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/pro_val_wb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUTO"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- MF -->
            <LinearLayout
                android:id="@+id/pro_btn_mf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/pro_lbl_mf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MF"
                    android:textColor="#B3FFFFFF"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/pro_val_mf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUTO"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- EV -->
            <LinearLayout
                android:id="@+id/pro_btn_ev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/pro_lbl_ev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EV"
                    android:textColor="#B3FFFFFF"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/pro_val_ev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Zoom Controls -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/zoom_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#80000000"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toTopOf="@+id/pro_controls_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/zoom_0_5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text=".5"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#4DFFFFFF"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/zoom_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1x"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/zoom_2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zoom_5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Modes -->
    <HorizontalScrollView
        android:id="@+id/modes_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/bottom_controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/mode_portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="Portrait"
                android:textColor="#B3FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mode_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_mode_selected"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="Photo"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mode_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="Video"
                android:textColor="#B3FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mode_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="Pro"
                android:textColor="#B3FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Bottom Controls -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_gallery"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="32dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#D7C5B9"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@android:drawable/ic_menu_gallery" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_ai_mode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#33FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_gallery"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@android:drawable/btn_star"
                app:tint="#FFD700" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_shutter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:strokeColor="@android:color/white"
            app:strokeWidth="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_shutter_inner"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_overlay_toggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#33FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_switch_camera"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_mapmode"
                app:tint="@android:color/white" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_switch_camera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="32dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#33FFFFFF"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@android:drawable/ic_popup_sync"
                app:tint="@android:color/white" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>